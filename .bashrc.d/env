#!/bin/bash
export LC_ALL="en_US.UTF-8"
export LANG="C"
export BASH_SILENCE_DEPRECATION_WARNING=1

# history
export HISTTIMEFORMAT='%F %T  '
export HISTCONTROL=ignoredups:erasedups
export HISTIGNORE="history:uptime"
export HISTSIZE=50000
shopt -s histappend

# brew
for file in /usr/local/bin/brew /opt/homebrew/bin/brew
do
    [ -s "$file" ] && eval $($file shellenv)
done

# vim
export EDITOR='vim'

# fzf
export FZF_DEFAULT_COMMAND='ag -g ""'

# vault
# export VAULT_ADDR=http://127.0.0.1:8200
# export VAULT_TOKEN=

# java
export JAVA_HOME=$(/usr/libexec/java_home -v 18)

# nvm
export NVM_DIR=~/.nvm
[ -s "$HOMEBREW_PREFIX/opt/nvm/nvm.sh" ] && . "$HOMEBREW_PREFIX/opt/nvm/nvm.sh"

# maven
export MAVEN_OPTS=-Xmx3072m

# gradle
export GRADLE_OPTS=-Xmx3072m

# python
export VIRTUALENVWRAPPER_PYTHON=$HOMEBREW_PREFIX/opt/python@3/bin/python3
export VIRTUALENV_PYTHON=$HOMEBREW_PREFIX/opt/python@3/bin/python3
source $HOMEBREW_PREFIX/bin/virtualenvwrapper.sh

# go
export GOPATH=~/tools/go
export GOBIN=$GOPATH/bin

# gpg
export GPG_TTY="$(tty)"

# rvm
[ -s "$HOME/.rvm/scripts/rvm" ] && source "$HOME/.rvm/scripts/rvm"

# gcloud sdk
export USE_GKE_GCLOUD_AUTH_PLUGIN=True
